# Custom Error Pages
ErrorDocument 404 /404.php

# SEO-Friendly URL Rewriting
RewriteEngine On

# Force WWW and HTTPS (only on production, not localhost)
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1 [NC]
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^thiyagideals\.com$ [NC]
RewriteRule ^(.*)$ https://www.thiyagideals.com/$1 [R=301,L]

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L]

# SEO-Friendly Product URLs
# Handle SEO-friendly product URLs with or without slug
RewriteRule ^product/([0-9]+)/?([^/]*)?/?$ product.php?id=$1 [L,QSA]

# Redirect old product URLs to new SEO-friendly format (optional)
# RewriteRule ^product\.php\?id=([0-9]+)$ /product/$1/ [R=301,L]

# ===== DYNAMIC BROWSE PAGE - SEO-FRIENDLY URLs =====

# Browse page (must come FIRST before other patterns)
RewriteRule ^browse/?$ browse.php [L,QSA]

# Store + Category + Price: /amazon-mobile-under-10000 (most specific first)
RewriteRule ^([a-z]+)-([a-z]+)-under-([0-9]+)/?$ browse.php?store=$1&category=$2&max_price=$3 [L,QSA]

# Store + Category: /amazon-mobile-deals
RewriteRule ^([a-z]+)-([a-z]+)-deals/?$ browse.php?store=$1&category=$2 [L,QSA]

# Store + Price: /amazon-deals-under-1000
RewriteRule ^([a-z]+)-deals-under-([0-9]+)/?$ browse.php?store=$1&max_price=$2 [L,QSA]

# Store + Discount: /flipkart-deals-50-off
RewriteRule ^([a-z]+)-deals-([0-9]+)-off/?$ browse.php?store=$1&min_discount=$2 [L,QSA]

# Category + Price: /mobile-under-10000
RewriteRule ^([a-z]+)-under-([0-9]+)/?$ browse.php?category=$1&max_price=$2 [L,QSA]

# Price range between: /deals-500-1000, /deals-1000-5000
RewriteRule ^deals-([0-9]+)-([0-9]+)/?$ browse.php?min_price=$1&max_price=$2 [L,QSA]

# Price range deals: /deals-under-500, /deals-under-1000
RewriteRule ^deals-under-([0-9]+)/?$ browse.php?max_price=$1 [L,QSA]

# Discount deals: /deals-50-percent-off, /deals-70-percent-off
RewriteRule ^deals-([0-9]+)-percent-off/?$ browse.php?min_discount=$1 [L,QSA]

# Store-specific deals: /amazon-deals, /flipkart-deals (less specific, comes last)
RewriteRule ^(amazon|flipkart|myntra|meesho|ajio)-deals/?$ browse.php?store=$1 [L,QSA]

# Category deals: /mobile-deals, /laptop-deals, /fashion-deals
RewriteRule ^(mobile|laptop|fashion|electronics|beauty|home)-deals/?$ browse.php?category=$1 [L,QSA]

# ===== END DYNAMIC BROWSE RULES =====

# Add trailing slash to directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ $1/ [R=301,L]

# Remove .php extension from URLs (but not for product URLs)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/product/
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Handle existing .php files without extension
RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
RewriteRule ^ /%1 [NC,L,R=301]

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>